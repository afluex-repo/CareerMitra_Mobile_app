<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/et_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_bg_boder"
        android:drawableStart="@drawable/ic_profile_user"
        android:drawablePadding="10dp"
        android:gravity="start|center"
        android:inputType="number"
        android:maxLength="10"
        android:hint="@string/first_name"
        android:padding="2dp"
        android:layout_marginBottom="8dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et_PhoneNumber" />
    <EditText
    android:id="@+id/et_PhoneNumber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
        android:layout_marginBottom="8dp"
    android:layout_marginEnd="32dp"
    android:background="@drawable/round_bg_boder"
    android:drawableStart="@drawable/ic_phone_call"
    android:drawablePadding="10dp"
    android:gravity="start|center"
    android:inputType="text"
    android:hint="@string/phone_no"
    android:padding="2dp"
    android:textSize="14dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et_Email" />
    <EditText
        android:id="@+id/et_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"

        android:layout_marginEnd="32dp"
        android:background="@drawable/round_bg_boder"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:gravity="start|center"
        android:inputType="text"
        android:hint="@string/e_mail"
        android:padding="2dp"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/et_feedback" />
    <EditText
        android:id="@+id/et_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"

        android:layout_marginEnd="32dp"
        android:background="@drawable/round_bg_boder"
        android:drawableStart="@drawable/ic_baseline_message_24"
        android:drawablePadding="10dp"
        android:gravity="start|center"
        android:inputType="text"
        android:hint="@string/your_feedback_at_least_5_word"
        android:padding="2dp"
        android:textSize="14dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:text="@string/we_will_reach_you_at_9889000000_or_ndesigner_afluex_gmail_com"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_feedback" />

   <Button
       android:id="@+id/sendFeedback"
       android:layout_width="150dp"
       android:layout_height="40dp"
       android:layout_marginTop="20dp"
       app:layout_constraintTop_toBottomOf="@+id/text_feedback"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:background="@drawable/round_bg"
       android:text="@string/send_feedback"
       android:textColor="@color/white"
       android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>